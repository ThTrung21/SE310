                                     VerticalAlignment="Top"
                                     Width="578"
                                     ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding Copies}">

