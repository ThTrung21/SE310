<Window x:Class="BookMK.Views.ViewForm.ViewBookForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookMK.Views.ViewForm"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
         xmlns:converter="clr-namespace:BookMK.Converters"    
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#36393E"
        Title="ViewBookForm" Height="550" Width="930">
    <Window.Resources>
        <converter:AbsoluteFileNameToBitmapImage x:Key="filenameToImage"/>
        <converter:PathToBookCover x:Key="PathToImage"/>
    </Window.Resources>

    <Border
        CornerRadius="15"
        Padding="16 0 16 0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <materialDesign:PackIcon
                Grid.Row="0"
                Kind="CloseThick"
                Foreground="#B44E4E"
                Height="32"
                HorizontalAlignment="Right"
                Name="CloseBtn"
                Cursor="Hand"
                MouseUp="CloseBtn_MouseUp"
                Width="32px"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="350"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0"
                           Width="270"
                           Height="340" 
                           VerticalAlignment="Bottom"
                            Source="{Binding CurrentBook.Cover, Converter={StaticResource PathToImage}}"
                            Stretch="Uniform"/>
                    <Grid Grid.Row="1"
                          Margin="8 32 32 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock  Text="Genres:"
                                    Foreground="White"
                                    VerticalAlignment="Top"
                                    FontSize="20"
                                    Grid.Column="0"
                                    FontFamily="{StaticResource Inter}"/>
                        <ListBox 
                            Grid.Column="1"
                            Margin="0 0 0 0"
                            FontWeight="Bold"
                            ScrollViewer.VerticalScrollBarVisibility="Hidden"
                            ItemContainerStyle="{StaticResource HighlightListBoxItemStyle}" 
                            ItemsSource="{Binding CurrentBook.Genre}"
                            Foreground="White"
                            FontSize="18"
                            FontFamily="{StaticResource Inter}"
                            x:Name="AvailableListBox"  
                            SelectionMode="Single" />

                    </Grid>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition  Height="90"/>
                        <RowDefinition Height="84"/>
                        <RowDefinition/>
                        <RowDefinition Height="64"/>
                    </Grid.RowDefinitions>
                    <Grid 
                    Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Title:"
                           Foreground="White"
                           VerticalAlignment="Top"
                           FontSize="20"
                           Grid.Row="0"
                           FontFamily="{StaticResource Inter}"/>
                        <TextBox
                    IsReadOnly="False"
                       
                    Text="{Binding CurrentBook.Title,UpdateSourceTrigger=PropertyChanged}"
                    Grid.Row="1" 
                    FontSize="18"
                    Margin="0 10 0 0"
                    Height="44"    
                    TextAlignment="Left"
                    VerticalAlignment="top"  
                    MaxLength="50"
                    Style="{StaticResource FilledTextBox}"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid 
                                Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Author:"
                                   Foreground="White"
                                   VerticalAlignment="Top"
                                   FontSize="20"
                                   Grid.Row="0"
                                      
                                   FontFamily="{StaticResource Inter}"/>
                            <TextBox
                                    Cursor="No"
                                    IsReadOnly="True"
                                    Text="{Binding CurrentBook.AuthorName,UpdateSourceTrigger=PropertyChanged}"
                                    Grid.Row="1" 
                                    FontSize="18"
                                    Margin="0 10 10 0"
                                    Height="44"    
                                    TextAlignment="Left"
                                    VerticalAlignment="top"  
                                    MaxLength="50"
                                    Style="{StaticResource FilledTextBox}"/>
                        </Grid>
                        <Grid 
                                Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Release Year:"
                                   Foreground="White"
                                   VerticalAlignment="Top"
                                   FontSize="20"
                                   Grid.Row="0"
                                   FontFamily="{StaticResource Inter}"/>
                            <TextBox
                                    Text="{Binding CurrentBook.ReleaseYear,UpdateSourceTrigger=PropertyChanged}"
                                    Grid.Row="1" 
                                    
                                    IsReadOnly="False"
                                    FontSize="18"
                                    Margin="0 10 0 0"
                                    Height="44"    
                                    TextAlignment="Left"
                                    VerticalAlignment="top"  
                                    MaxLength="50"
                                    Style="{StaticResource FilledTextBox}"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid 
                                Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Stock:"
                                   Foreground="White"
                                   VerticalAlignment="Top"
                                   FontSize="20"
                                   Grid.Row="0"
                                      
                                   FontFamily="{StaticResource Inter}"/>
                            <TextBox
                                    Cursor="No"
                                    IsReadOnly="True"
                                    Text="{Binding CurrentBook.Stock,UpdateSourceTrigger=PropertyChanged}"
                                    Grid.Row="1" 
                                    FontSize="18"
                                    Margin="0 10 10 0"
                                    Height="44"    
                                    TextAlignment="Left"
                                    VerticalAlignment="top"  
                                    MaxLength="50"
                                    Style="{StaticResource FilledTextBox}"/>
                        </Grid>
                        <Grid 
                                Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="ISBN:"
                                   Foreground="White"
                                   VerticalAlignment="Top"
                                   FontSize="20"
                                   Grid.Row="0"
              
                                   FontFamily="{StaticResource Inter}"/>
                                <TextBox  
                                    Text="{Binding CurrentBook.ISBN,UpdateSourceTrigger=PropertyChanged}"
                                    Grid.Row="1" 
                                    FontSize="18"
                                    Margin="0 10 10 0"
                                    Height="44"    
                                    TextAlignment="Left"
                                    VerticalAlignment="top"  
                                    MaxLength="50"
                                    Style="{StaticResource FilledTextBox}"/>
                        </Grid>
                    </Grid>
                  
                        <Button
                            Grid.Row="4"
                            Name="InsertBtn"
                            VerticalAlignment="Center"
                            Margin="0 0 0 0 " 
                            HorizontalAlignment="Center" Width="200" Height="40" Padding="0" 
                            Content="Update"
                            Click="InsertBtn_Click"
                            FontFamily="{StaticResource Inter}"
                            FontSize="18"
                            Cursor="Hand"
                            Style="{StaticResource RoundedButtonStyle}" >

                        </Button>
                       
                    
                    

                    <Grid
                        Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24"/>
                            <RowDefinition/>
                           
                        </Grid.RowDefinitions>
                        <TextBlock Text="Copies:"
                                   Foreground="White"
                                   VerticalAlignment="Top"
                                   FontSize="20"
                                   Grid.Row="0"
                                    
