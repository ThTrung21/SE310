                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Condition}" Value="Damaged">
                                                                            <Setter Property="Foreground" Value="Red"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </ComboBox.Style>
