                                            BorderBrush="White"
                                            BorderThickness="0 0 2 2">
                                        <TextBlock 
                                           Text="CopyID"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontFamily="{StaticResource RobotoMono}"
                                           FontSize="18"
           
                                           Foreground="White"/>

                                    </Border>
                                    <!--Header 2-->
                                    <Border Grid.Column="1"
                                            BorderBrush="White"
                                            BorderThickness="0 0 2 2">
                                        <TextBlock 
                                           Text="Condition"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontFamily="{StaticResource RobotoMono}"
                                           FontSize="18"
           
                                           Foreground="White"/>
                                    </Border>

                                    <!--Header 3-->
                                    <Border Grid.Column="2"
                                            BorderBrush="White"
                                            BorderThickness="0 0 0 2">
                                        <TextBlock 
                                           Text="Availability"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontFamily="{StaticResource RobotoMono}"
                                           FontSize="18"
                                           Foreground="White"/>
                                    </Border>
                                    <!--Header 4-->
                                    <Border Grid.Column="3"
                                          BorderBrush="White"
                                          BorderThickness="2 0 2 2">
                                         <TextBlock 
                                             Text="Borrower"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"
                                             FontFamily="{StaticResource RobotoMono}"
                                             FontSize="18"
                                             Foreground="White"/>
                                    </Border>
                                    <Border Grid.Column="4"  BorderBrush="White"
                                             BorderThickness="0 0 0 2">
                                        
                                    </Border>
                                </Grid>
